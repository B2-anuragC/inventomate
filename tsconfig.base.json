{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    // "outDir": "./dist",
    // "rootDir": "./src",

    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    // "noImplicitAny": false,
    // "esModuleInterop": true,
    "importHelpers": true,
    // "strictPropertyInitialization": false,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@inventory-system/constant": ["libs/constant/src/index.ts"],
      "@inventory-system/dto": ["libs/dto/src/index.ts"],
      "@inventory-system/exception": ["libs/exception/src/index.ts"],
      "@inventory-system/interceptor": ["libs/interceptor/src/index.ts"],
      "@inventory-system/notification": ["libs/notification/src/index.ts"],
      "@inventory-system/utils": ["libs/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
